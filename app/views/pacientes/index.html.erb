<h1>Listado de pacientes</h1>

<table class="table table-striped">
  <tr>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Tipo de documento</th>
    <th>Documento</th>
    <th>Fecha de nacimiento</th>
    <th>Localidad</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pacientes.each do |paciente| %>
  <tr>
    <td><%= paciente.nombres %></td>
    <td><%= paciente.apellidos %></td>
    <td><%= paciente.tipo_de_documento_id %></td>
    <td><%= paciente.documento %></td>
    <td><%= paciente.fecha_de_nacimiento %></td>
    <td><%= paciente.localidad %></td>
    <td><%= link_to 'Ver', paciente %></td>
    <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
    <td><%= link_to 'Eliminar', paciente, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar?' } %></td>
  </tr>
<% end %>
</table>

